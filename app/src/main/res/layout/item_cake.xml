<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cake_item_row_size">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

        <ImageView
                android:id="@+id/cake_image"
                android:layout_alignParentEnd="true"
                android:layout_width="@dimen/cake_item_image_size"
                android:scaleType="centerCrop"
                android:layout_height="@dimen/cake_item_image_size"/>

        <LinearLayout
                android:layout_toStartOf="@id/cake_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:padding="8dp">

            <TextView
                    android:id="@+id/cake_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    tools:text="Lemon Cheesecake"/>

            <TextView
                    android:id="@+id/cake_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    tools:text="A cheesecake made of lemon"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>